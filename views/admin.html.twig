{% extends "layout.html.twig" %} {% block title %} {{ title }} {% endblock %} {% block content %}
<h2 class="text-center" style="margin-bottom: 50px">Bienvenue {{ app.user.civility ~ " " ~ app.user.name }} sur le portail d'administration</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div id="messageAdmin" class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
    
<div class="row" style="margin-bottom: 30px">
    <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
        <ul class="nav nav-tabs nav-justified" id="actionsAdmin">
            <li><a href="#commodities" data-toggle="tab">Les produits</a></li>
            <li><a href="#orders" data-toggle="tab">Les commandes</a></li>
            <li><a href="#users" data-toggle="tab">Comptes utilisateurs</a></li>
            <li><a href="#admin" data-toggle="tab">Comptes administrateurs</a></li>
        </ul>
    </div>
</div>
<div class="tab-content" style="margin-bottom: 20px">
    <div class="tab-pane fade adminTable" id="commodities">
        {% if commodities %}
        <div class="table-responsive">
            <table id="tableProducts" class="table table-striped table-condensed table-hover" style="text-align:center; border: 1px solid #669900">
                <thead>
                    <tr style="font-weight: bold; background-color: #669900; color:white">
                        <th style="text-align: center">Type</th>
                        <th style="text-align: center">Nom</th>
                        <th style="text-align: center">Description</th>
                        <th style="text-align: center">Prix</th>
                        <th style="text-align: center">Action</th>
                    </tr>
                </thead>

                {% for commodity in commodities %}
                <tr>
                    <td>{{ commodity.type }}</td>
                    <td>{{ commodity.title }}</td>
                    <td>{{ commodity.description | truncate(30) }}</td>
                    <td>{{ commodity.price }}</td>
                    <td>
                        <a href="{{ path('admin_commodity_edit', { 'id': commodity.id }) }}" title="Modifier"><i class="fas fa-edit" style="margin-right:5px; color:#669900"></i></a>
                        <a title="Supprimer" data-toggle="modal" data-target="#confirmDeletion{{ commodity.id }}"><i class="fas fa-eraser" style="color:#669900"></i></a>
                        <div class="modal fade" id="confirmDeletion{{ commodity.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                                    </div>
                                    <div class="modal-body">
                                        Confirmez-vous la suppression de ce produit ?
                                    </div>
                                    <div class="modal-footer">
                                        <a href="{{ path('admin_commodity_delete', {'id': commodity.id }) }}"><button class="btn btn-default" >Oui</button></a>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning" style="text-align: center">Pas de produit trouvé.</div>
        {% endif %}
        <div style="text-align: center; margin-bottom: 20px"> <a href="{{ path('admin_commodity_add') }}" title="Ajouter"><button class="btn btn-default"><i  class="fas fa-plus" style="margin-right:5px; color:white"></i> Ajouter</button></a></div>
    </div>

    <div class="tab-pane fade in active adminTable" id="orders">
        {% if orders %}
        <div class="table-responsive">
            <table id="tableProducts" class="table table-striped table-condensed table-hover" style="text-align:center; border: 1px solid #669900">
                <p style="margin-bottom: 30px"><a href="{{ path('admin_order_page',{'currentPage': 1, 'status': 'En cours'}) }}"><button class="btn btn-warning btn-block">Voir les commandes en cours</button></a></p>
              
                <p style="margin-bottom: 30px"><a href="{{ path('admin_order_validated_page',{'currentPage': 1, 'status': 'Validée'}) }}"><button class="btn btn-default btn-block">Voir les commandes validées</button></a></p>
               
                <p style="margin-bottom: 30px"><a href="{{ path('admin_order_cancelled_page',{'currentPage': 1, 'status': 'Annulée'}) }}"><button class="btn btn-danger btn-block">Voir les commandes annulées</button></a></p>
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning" style="text-align: center">Pas de commande enregistrée.</div>
        {% endif %}
    </div>

    <div class="tab-pane fade adminTable" id="users">
        {% if users %}
        <div class="table-responsive">
            <table id="tableProducts" class="table table-striped table-condensed table-hover" style="text-align:center; border: 1px solid #669900">
                <thead>
                    <tr style="font-weight: bold; background-color: #669900; color:white">
                        <th style="text-align: center">Prénom</th>
                        <th style="text-align: center">Nom</th>
                        <th style="text-align: center">E-mail</th>
                        <th style="text-align: center">Téléphone</th>
                        <th style="text-align: center" hidden></th>
                        <th style="text-align: center">Action</th>
                    </tr>
                </thead>
                {% for user in users %} {% if user.role == 'ROLE_USER' %}
                <tr>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td hidden>{{ user.orderNumber }}</td>
                    <td>
                        <a title="Supprimer" data-toggle="modal" data-target="#confirmDeletionUser{{ user.id }}"><i class="fas fa-eraser" style="color:#669900"></i></a>
                        <div class="modal fade" id="confirmDeletionUser{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteUserModal" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="deleteUserModal">Confirmation</h4>
                                    </div>
                                    <div class="modal-body">
                                        Confirmez-vous la suppression de cet utilisateur ?
                                    </div>
                                    <div class="modal-footer">
                                        <a href="{{ path('admin_user_delete', {'id': user.id }) }}"><button class="btn btn-default" >Oui</button></a>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endif %}{% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning" style="text-align: center">Pas d'utilisateur enregistré.</div>
        {% endif %}
    </div>

    <div class="tab-pane fade adminTable" id="admin">
        {% if users %}
        <div class="table-responsive">
            <table id="tableProducts" class="table table-striped table-condensed table-hover" style="text-align:center; border: 1px solid #669900">
                <thead>
                    <tr style="font-weight: bold; background-color: #669900; color:white">
                        <th style="text-align: center">Pseudo</th>
                        <th style="text-align: center">Prénom</th>
                        <th style="text-align: center">Nom</th>
                        <th style="text-align: center">E-mail</th>
                        <th style="text-align: center">Action</th>
                    </tr>
                </thead>
                {% for user in users %} {% if user.role == 'ROLE_ADMIN' %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" title="Modifier"><i class="fas fa-edit" style="margin-right:5px; color:#669900"></i></a>
                        <a title="Supprimer" data-toggle="modal" data-target="#confirmDeletionAdmin{{ user.id }}"><i class="fas fa-eraser" style="color:#669900"></i></a>
                        <div class="modal fade" id="confirmDeletionAdmin{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteAdminModal" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="deleteAdminModal">Confirmation</h4>
                                    </div>
                                    <div class="modal-body">
                                        Confirmez-vous la suppression de cet administrateur ?
                                    </div>
                                    <div class="modal-footer">
                                        <a href="{{ path('admin_user_delete', {'id': user.id }) }}"><button class="btn btn-default" >Oui</button></a>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endif %}{% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning" style="text-align: center">Pas d'administrateur enregistré.</div>
        {% endif %}
        <div style="text-align: center; margin-bottom: 20px"> <a href="{{ path('admin_user_add') }}" title="Ajouter"><button class="btn btn-default"><i  class="fas fa-plus" style="margin-right:5px; color:white"></i> Ajouter</button></a></div>
    </div>
</div>
{% endblock %}
