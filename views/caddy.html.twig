{% extends "layout.html.twig" %} {% block title %} {{ title }} {% endblock %} {% block content %}

<div class="row" style="text-align: center" id="caddy-empty">
    <div class="col-xs-6">
        <img src="{{ asset('/web/images/panier.png') }}" class="img-responsive pull-right" alt="panier vide" /></div>
    <div class="col-xs-6">
        <h2><i class="fas fa-shopping-basket fa-spin"></i><br /><small>Votre panier est vide !!!</small></h2>
    </div>
    <div><a href="{{ path('home') }}"><button class="btn btn-default">Retour à la carte</button></a></div>
</div>

<div id="caddy-title">
    <h2 style="text-align: center; font-size:30px">Votre Panier</h2>
</div>

<form id="caddy-full" action="{{ path('order') }}">
    <table class="table table-striped table-condensed table-hover" style="text-align:center">

        <thead>
            <tr style="font-weight: bold; background-color: #669900; color:white">
                <th style="text-align:center">Nom du produit</th>
                <th style="text-align:center">Prix unitaire</th>
                <th style="text-align:center">Quantité</th>
                <th style="text-align:center">Action</th>
            </tr>
        </thead>
        <tbody id="caddy-table"></tbody>

        <tr style="font-weight: bold">
            <td colspan="2"></td>
            <td>Sous total :</td>
            <td id="subtotal"></td>
        </tr>
        {% if app.user %}
        <tr style="font-weight: bold">
            <td colspan="2"></td>
            <td>Remise fidélité :</td>
            <td data-discount="{{ app.user.orderNumber }}"><span id="discount"></span> %</td>
        </tr>
        {% endif %}
        <tr style="font-weight: bold">
            <td colspan="2"></td>
            <td>Total :</td>
            <td id="total"></td>
        </tr>
    </table>

    <td>
        <a href="#confirm_validate" data-toggle="modal"><input type="button" value="Valider la commande" class="btn btn-default pull-right" style="margin-top: 30px" /></a>
        <div class="modal fade" id="confirm_validate" role="dialog" aria-labelledby="modalTitre" aria-hidden="true">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                    <h4 id="modalTitre" class="modal-title">Valider le panier</h4>
                </div>
                <div class="modal-body" id="mod">
                    <blockquote>
                        <p>Confirmez-vous la validation du panier ?</p>
                        <button class="btn btn-default" id="confirm-command">Oui</button>
                        <button type="button" class="btn btn-danger" value="Non" data-dismiss="modal" aria-hidden="true">Non</button>
                        <hr />
                        <small class="pull-right">L'équipe ClickPizza</small>
                    </blockquote>
                </div>
            </div>
        </div>
    </td>

</form>

{% endblock %}
