{% extends 'layout.html.twig' %} {% block title %}{{ title }}{% endblock %} {% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success" style="text-align: center">
        {{ flashMessage }}
    </div>
{% endfor %} {% for flashMessage in app.session.flashbag.get('warning') %}
    <div class="alert alert-warning" style="text-align: center">
        {{ flashMessage }}
    </div>
{% endfor %} {% if form_errors(changePwdForm.password.first) %}
    <div class="alert alert-danger" style="text-align: center">
        {{ form_errors(changePwdForm.password.first) }}
    </div>
{% endif %}
    
<div>
    {{ form_start(changePwdForm, { 'attr': {'class': 'form-horizontal well'} }) }} 
    <div class="form-group">
        {{ form_label(changePwdForm.oldPassword, null, { 'label': 'Ancien mot de passe :', 'label_attr': { 'class': 'col-sm-5 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(changePwdForm.oldPassword, { 'attr': { 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(changePwdForm.password.first, null, { 'label': 'Nouveau mot de passe :', 'label_attr': { 'class': 'col-sm-5 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(changePwdForm.password.first, { 'attr': { 'class': 'form-control', 'title': 'Mot de passe avec au moins 8 caract√®res, une majuscule et un chiffre' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(changePwdForm.password.second, null, { 'label': 'Confirmer le mot de passe :', 'label_attr': { 'class': 'col-sm-5 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(changePwdForm.password.second, { 'attr': { 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-default" value="Valider" />
        </div>
    </div>
    {{ form_end(changePwdForm) }}
</div>
{% endblock %}