{% extends 'layout.html.twig' %} {% block title %}{{ title }}{% endblock %} {% block content %}
<h2 class="text-center">{{ block ('title') }}</h2>
{% if error %}
<div class="alert alert-danger">
    <strong>Erreur d'authentification</strong>
</div>
{% endif %}
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success" style="text-align: center">
    {{ flashMessage }}
</div>
{% endfor %} 
<form class="well form-horizontal" role="form" method="post" action="{{ path('login_check') }}">
    <div class="form-group">
        <label class="col-sm-5 control-label" id="login">Votre login :</label>
        <div class="col-sm-4">
            <input type="text" name="_username" class="form-control" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-5 control-label" id="pwd">Votre mot de passe :</label>
        <div class="col-sm-4">
            <input type="password" name="_password" class="form-control" required/>
        </div>
    </div>
    <div class="form-group">
        <div style="text-align: center">
            <button type="submit" class="btn btn-default" style="width: 120px; margin-bottom: 20px">Valider</button>
            <a href="{{ path('reset_password') }}"><button type="submit" class="btn btn-default" style="width: 120px; margin-bottom: 20px">Mdp oubli√©</button></a>
        </div>
    </div>
</form>
{% endblock %}
