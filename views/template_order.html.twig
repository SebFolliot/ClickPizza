{% block content %}
    {% for order in orders %}
        <tr>
            <td class="order-price-td-email">{{ order.user.email }}</td>
            <td>N°{{ order.id }}</td>
            <td>Le {{ order.orderDate | date('d/m/Y') }} à {{ order.orderDate | date('H\\hi') }}</td>
            <td> <a title="Détail de la commande" data-toggle="modal" data-target="#orderDetail{{ order.id }}"><i class="fas fa-search-plus" style="color:#669900"></i></a>
                <div class="modal fade" id="orderDetail{{ order.id }}" tabindex="-1" role="dialog" aria-labelledby="detailValidateOrderModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="detailValidateOrderModal">Détail de la commande {{ order.id }}</h4>
                            </div>
                            <div>Commande effectuée le {{ order.orderDate | date('d/m/Y') }} à {{ order.orderDate | date('H\\hi') }}<br />Montant de la commande : {{ order.price }} €<br /><span class="info-email">@mail du client : {{ order.user.email }}</span>
                            </div>
                            {% for orderCommodity in ordersCommodities %} 
                                {% if order.id == orderCommodity.order.id %}
                                    <div class="modal-body">
                                        <ul class="nav navbar-nav">
                                            <li style="text-align: left; margin: 0 0 0 10px">
                                            <span class="badge">{{ orderCommodity.quantity }}</span> {{ orderCommodity.commodity.title }}</li>
                                        </ul>
                                    </div>
                                {% endif %} 
                            {% endfor %}
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}